script(type="text/template", id="mainTemplate").
  <div id="filter">
    <input placeholder="Поиск" class="filter"/>
    <input type="checkbox" checked="true" class="collapse-all"/>
  </div>
  <ul id="music-list"></ul>
  <div id="add-music" class="modal fade">
    <form role="form" class="form-horizontal formAddMusic">
      <h2>Добавить музыкальную композицию</h2>
      <div class="form-group">
        <label for="performer" class="col-sm-3 control-label">Исполнитель</label>
        <div class="col-sm-9">
          <input id="performer" type="text" placeholder="Исполнитель" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <label for="title" class="col-sm-3 control-label">Название</label>
        <div class="col-sm-9">
          <input id="title" type="text" placeholder="Название" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <label for="genre" class="col-sm-3 control-label">Жанр</label>
        <div class="col-sm-9">
          <select id="genre" type="text" placeholder="Жанр" class="form-control">
            <option>Rock</option>
            <option>Pop</option>
            <option>Instrumental</option>
            <option>Classical</option>
            <option>Jazz</option>
            <option>Other</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="song" class="col-sm-3 control-label">URL песни</label>
        <div class="col-sm-9">
          <input id="song" type="text" placeholder="URL песни" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <input id="create-music" data-dismiss="modal" type="reset" value="Добавить" class="btn btn-success"/>
        </div>
      </div>
      <div data-dismiss="modal" class="close"></div>
    </form>
  </div>
